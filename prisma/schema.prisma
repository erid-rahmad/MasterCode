



datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Post {
  id        String    @id @default(cuid())
  title     String
  content   String?
  published Boolean   @default(false)
  comments  Comment[]

  @@map(name: "posts")
}

model Comment {
  id        String  @id @default(cuid())
  content   String?
  post      Post?   @relation(fields: [postId], references: [id])
  postId    String?
  published Boolean @default(false)
}

model Team {
  id        String  @id @default(cuid())
  name   String?
  title      String?
  desc    String?
}

model type{
 id    String  @id @default(cuid())
 name   String?
 category category[]

}

model category {
  id        String  @id @default(cuid())
  cardTitle   String?
  body      String?
  footer    String?
  images    String?
  type      type?   @relation(fields: [typeId], references: [id])
  typeId    String?


}


