generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Post {
  id        String    @id @default(cuid())
  title     String
  content   String?
  published Boolean   @default(false)
  comments  Comment[]

  @@map("posts")
}

model Comment {
  id        String  @id @default(cuid())
  content   String?
  postId    String?
  published Boolean @default(false)
  post      Post?   @relation(fields: [postId], references: [id])

  @@index([postId], map: "Comment_postId_fkey")
}

model Team {
  id    String  @id @default(cuid())
  name  String?
  title String?
  desc  String?
}

model type {
  id       String     @id @default(cuid())
  name     String?
  category category[]
}

model category {
  id        String  @id @default(cuid())
  cardTitle String?
  body      String?
  footer    String?
  images    String?
  typeId    String?
  type      type?   @relation(fields: [typeId], references: [id])

  @@index([typeId], map: "category_typeId_fkey")
}

model registerProduct {
  id    String  @id @default(cuid())
  name  String?
  email String?
  instance  String?
  phone  String?
}
